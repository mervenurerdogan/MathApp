<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/pngtreemath_blackboard_cyan_fresh_background_1473189"
    android:gravity="center"
    tools:context=".PlayActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="171dp"
            android:layout_height="124dp"
            android:layout_margin="30dp"
            android:src="@drawable/math"></ImageView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/amarante"
        android:text="Matematik Yarışması"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addition"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/icons8_plus_67"></ImageView>

        <ImageView
            android:id="@+id/sub"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/icons8_minus_67"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/multi"
            android:src="@drawable/icons8_multiply_67"
            android:layout_margin="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            >
        </ImageView>

        <ImageView
            android:id="@+id/divie"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:src="@drawable/icons8_divide_67"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/square"
            android:src="@drawable/icons8_square_root_67"
            android:layout_margin="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            >
        </ImageView>



    </LinearLayout>


</LinearLayout>